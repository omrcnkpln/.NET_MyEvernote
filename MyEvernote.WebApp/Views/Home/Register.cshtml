@using MyEvernote.Entities.ValueObjects

@model RegisterViewModel
@{
    ViewBag.Title = "Kayıt Sayfası";
}

<link href="~/Content/login.css" rel="stylesheet" />
<link href="~/Content/validation.css" rel="stylesheet" />

<div class="login-form">
    <div class="container">
        <h2>Kayıt Sayfası</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                @Html.ValidationSummary(false)

                <div class="card">
                    <div class="card-header">Log In</div>

                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">Kullanıcı Adınız</label>

                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>

                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "E-Posta adresiniz" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>

                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Password Again</label>

                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifre Tekrar", type = "password" })
                                </div>
                            </div>

                           
                            <div class="col-md-6 offset-md-4">
                                <div class="row px-3 mt-3">
                                    <button type="submit" class="btn btn-block btn-primary">
                                        Kayıt Ol
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

